##### General Aliases #####
alias tmux="tmux -2" # added to get the right color for vim under tmux 

alias ll="ls -la"

##### Archlinux
alias UpdateMirrors="sudo reflector  -c 'France' -f 12 -l 12 -n 12 --verbose --save /etc/pacman.d/mirrorlist"
alias pclean="sudo cacheclean -v 1"
alias UpdateResources="xrdb ~/.XResources"

##### Docker aliases #####
alias du="boot2docker start"
alias dr="boot2docker stop && boot2docker start"
alias dd="boot2docker stop"
alias ds="boot2docker ssh"
